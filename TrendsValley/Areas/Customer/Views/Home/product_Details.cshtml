@model TrendsValley.Models.Models.ShoppingCart
<div class="row  p-4" style="margin-left:200px">
    <div class="col-lg-7 col-md-7 col-sm-12" style="width: fit-content;">
        <img src="@Model.ProductDetailsViewModel.product.imgUrl" class="img-fluid t-shirtImg" alt="...">
    </div>
    <div class="col-lg-5 col-md-5 col-sm-12">
        <h1>@Model.ProductDetailsViewModel.product.Product_Name</h1>
      
        <br />

        <h5 class="text-secondary">Description :</h5>
        <p> @Html.Raw(Model.ProductDetailsViewModel.product.Product_Details)</p>
        <hr>
        
        <div class="row">
            <div class="col-6">
                <h5 class="d-inline">Category : @Model.ProductDetailsViewModel.CategoryName</h5>

            </div>
            <div class="col-6">
                <h5>Brand : @Model.ProductDetailsViewModel.Brandname</h5>
            </div>
           
        </div>
        <!-- sizes -->
        <div class="align-middle">
            <label for="" class="fs-2" style="vertical-align: bottom;">Sizes  &nbsp;</label>
            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off">
                <label class="btn btn-outline-success" for="btnradio1">Small</label>

                <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
                <label class="btn btn-outline-success" for="btnradio2">Medium</label>

                <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off">
                <label class="btn btn-outline-success" for="btnradio3">Large</label>

                <input type="radio" class="btn-check" name="btnradio" id="btnradio4" autocomplete="off">
                <label class="btn btn-outline-success" for="btnradio4">X-Large</label>

                <input type="radio" class="btn-check" name="btnradio" id="btnradio5" autocomplete="off">
                <label class="btn btn-outline-success" for="btnradio5">2X-Large</label>
            </div>
        </div>

        <div>
            <br />
            <form method="post" asp-action="product_Details" asp-controller="Home">

            <div class="row">
                <div class="col-6 pt-2 pb-2">
                    <p>No In Stock : @Model.ProductDetailsViewModel.product.NoInStock</p>

                </div>

                <div class="col-6">
                        <input hidden asp-for="@Model.ProductId" />
                        <input value="1" type="number" asp-for="@Model.Count" class="form-control" max="@Model.ProductDetailsViewModel.product.NoInStock" min="1" />
                        <br />
                    
                </div>
            </div>
            <hr />
            <p class="fs-2 fw-bold"> Price : @Model.ProductDetailsViewModel.product.Product_Price $</p>
                <button type="submit" class="btn btn-success"> Add To Cart </button>
                        <a asp-action="products" class="btn btn-warning"> Go Back </a>

                    </form>
        </div>
        

    </div>
</div>
<!-- main end -->
