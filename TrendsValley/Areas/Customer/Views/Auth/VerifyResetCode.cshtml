@model VerifyCodeViewModel
<div class="row col-md-10 offset-md-1">
    <h1 class="text-info">Forgot your Password?</h1>
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Auth" asp-action="VerifyResetCode" method="post" role="form">
                <input asp-for="Email" hidden />
                <h4>Enter your Code.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Code" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>

                @if (TempData["Message"] != null)
                {
                    <p style="color: green;">@TempData["Message"]</p>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <p style="color: red;">@TempData["ErrorMessage"]</p>
                }


                <div class="form-group">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success form-control">Submit</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}