@model ExternalLoginConfirmationViewModel

<div class="p-3">
    <div class="container">

<form asp-controller="Auth" asp-action="ExternalLoginConfirmation" method="post" role="form" asp-route-returnurl="@ViewData["ReturnUrl"]">
 
    <div asp-validation-summary="All" class="text-danger"></div>
    <h5>
        You've successfully authenticated with <strong>@ViewData["ProviderDisplayName"]</strong>.
    </h5>
            <h6>
                Please Fill Your Account Data
            </h6>
    <div class="form-group">
        <label class="col-md-2">First Name</label>
        <div class="col-md-10">
                    <input asp-for="FName" class="form-control" placeholder="Enter Your First Name" />
            <span asp-validation-for="FName" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
                <label class="col-md-2">Last Name</label>
                <div class="col-md-10">
            <input asp-for="LName" class="form-control" placeholder="Enter Your Last Name" />
            <span asp-validation-for="LName" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
                <label class="col-md-2">Email</label>
                <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
                <label class="col-md-2">Phone Number</label>
                <div class="col-md-10">
                    <input asp-for="Phone" class="form-control" placeholder="Enter Your Phone Number" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group mb-3">
                <div class="col-md-10">

        <select asp-for="StateId" class="form-select" asp-items="@Model.Statelist">
            <option disabled selected>--Select State--</option>
        </select>
        <span asp-validation-for="StateId" class="text-danger fw-bold"></span>
        </div>
    </div>
    <div class="form-group">
                <div class="col-md-10">

        <select asp-for="CityId" class="form-select" asp-items="@Model.CityList">
            <option disabled selected>--Select City--</option>
            <span asp-validation-for="CityId" class="text-danger fw-bold"></span>
        </select>
        </div>
    </div>
    <br />
    <div class="form-group">
                <label class="col-md-2">Postal Code</label>
                <div class="col-md-10">
            <input asp-for="PostalCode" class="form-control" placeholder="Enter Your Postal Code" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
                <label class="col-md-2">Street Address</label>
                <div class="col-md-10">
                    <input asp-for="StreetAddress" class="form-control" placeholder="Enter Your Street Address" />
            <span asp-validation-for="StreetAddress" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success form-control w-100">Register</button>
        </div>
    </div>
</form>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}