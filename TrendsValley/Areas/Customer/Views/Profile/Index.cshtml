                            Cancel
                        </button>
                        <button type="submit"
                                class="px-4 py-2 bg-primary text-white rounded-lg hover:bg-[#076b63] transition-colors">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Phone Modal -->
        <div id="phoneModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
            <div class="bg-white rounded-xl p-6 w-full max-w-md mx-4">
                <h3 class="text-lg font-semibold mb-4">Edit Phone Number</h3>
                <form asp-action="UpdatePhone" method="post">
                    @Html.AntiForgeryToken()
                    <div class="space-y-4">
                        <div>
                            <input asp-for="PhoneNumber" name="PhoneNumber"
