                <i class="fas fa-chevron-left"></i>
            </button>
            <button class="px-3 py-1 rounded-lg bg-[#6366f1] text-white">1</button>
            <button class="px-3 py-1 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100">2</button>
            <button class="px-3 py-1 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100">3</button>
            <span class="px-2">...</span>
            <button class="px-3 py-1 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100">
                <i class="fas fa-chevron-right"></i>
            </button>
        </nav>
    </div>
</div>

<script>
    function showTracking(orderId) {
        // Hide all tracking sections first
        document.querySelectorAll('[id^="tracking-"]').forEach(el => {
            el.classList.add('hidden');
        });
        // Hide all return forms
        document.querySelectorAll('[id^="return-"]').forEach(el => {
            el.classList.add('hidden');
        });
        // Show the requested tracking
        document.getElementById(`tracking-${orderId}`).classList.remove('hidden');
    }

    function showReturnForm(orderId) {
        // Hide all tracking sections first
        document.querySelectorAll('[id^="tracking-"]').forEach(el => {
            el.classList.add('hidden');
        });
        // Hide all return forms
        document.querySelectorAll('[id^="return-"]').forEach(el => {
            el.classList.add('hidden');
        });
        // Show the requested return form
        document.getElementById(`return-${orderId}`).classList.remove('hidden');
    }

    function hideReturnForm(orderId) {
        document.getElementById(`return-${orderId}`).classList.add('hidden');
    }

    // Handle return method radio buttons
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('input[name="returnMethod"]').forEach(radio => {
            radio.addEventListener('change', function() {
                // Reset all indicators
                document.querySelectorAll('input[name="returnMethod"]').forEach(r => {
                    const indicator = r.nextElementSibling;
                    indicator.classList.remove('border-[#6366f1]', 'bg-[#6366f1]');
                    indicator.classList.add('border-gray-300');
                    indicator.innerHTML = '';
                });

                // Style the selected one
                if (this.checked) {
                    const indicator = this.nextElementSibling;
                    indicator.classList.add('border-[#6366f1]', 'bg-[#6366f1]');
                    indicator.classList.remove('border-gray-300');

                    // Add checkmark
                    indicator.innerHTML = `
                        <svg class="h-3 w-3 text-white" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                    `;
                }
            });
        });
    });
</script>