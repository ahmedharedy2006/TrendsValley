<script>
    function closeMessage(id) {
        let element = document.getElementById(id);
        if (element) {
            element.classList.add('animate-fade-out');
            setTimeout(() => element.remove(), 1000);
        }
    }

    function showOrderDetail(orderId) {
        document.querySelectorAll('[id$="-detail"], [id$="-return"]').forEach(el => {
            el.classList.add('hidden');
        });
        document.getElementById(`${orderId}-detail`).classList.remove('hidden');
    }

    function showReturnForm(orderId) {
        document.querySelectorAll('[id$="-detail"], [id$="-return"]').forEach(el => {
            el.classList.add('hidden');
        });
        document.getElementById(`${orderId}-return`).classList.remove('hidden');
    }

    function hideReturnForm(orderId) {
        document.getElementById(`${orderId}-return`).classList.add('hidden');
    }

    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('input[name="returnMethod"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.querySelectorAll('input[name="returnMethod"]').forEach(r => {
                    const indicator = r.nextElementSibling;
                    indicator.classList.remove('border-primary', 'bg-primary');
                    indicator.classList.add('border-gray-300');
                    indicator.innerHTML = '';
                });

                if (this.checked) {
                    const indicator = this.nextElementSibling;
                    indicator.classList.add('border-primary', 'bg-primary');
                    indicator.classList.remove('border-gray-300');
                    indicator.innerHTML = `
                        <svg class="h-3 w-3 text-white" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                    `;
                }
            });
        });
    });

    document.addEventListener("DOMContentLoaded", function() {
        setTimeout(() => {
            closeMessage('successMessage');
        }, 5000);
    });
</script>

