        <!-- Order 2 - Shipped -->
        <div class="border border-gray-200 rounded-lg overflow-hidden">
            <!-- Order Header -->
            <div class="bg-gray-50 p-3 md:p-4 flex flex-col md:flex-row md:items-center justify-between border-b border-gray-200">
                <div class="mb-2 md:mb-0">
