@model TrendsValley.Models.Models.Pager

<nav aria-label="Page navigation example" style="margin-left:30vw">
    <ul class="flex items-center -space-x-px h-8 text-sm">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a class="flex items-center justify-center px-3 h-8 leading-tight" style="background-color:#00a63e; color:white;" asp-action="Index" asp-controller="City" asp-route-pg="@(Model.CurrentPage -1)">
                    <span class="sr-only">Previous</span>
                    <svg class="w-2.5 h-2.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4" />
                    </svg>
                </a>
            </li>
        }
        @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
        {
            @* <li class="page-item @(pge == Model.CurrentPage ? "active" : "")"> *@
            @*     <a class="page-link" asp-action="products" asp-route-pg="@pge"> *@
            @*         @pge *@
            @*     </a> *@
            @* </li> *@
            <li>
                <a asp-action="Index" asp-controller="City" asp-route-pg="@pge" class="flex items-center justify-center px-3 h-8 leading-tight" style="background-color:#00a63e; color:white;">
                    @pge
                </a>
            </li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a class="flex items-center justify-center px-3 h-8 leading-tight" style="background-color:#00a63e; color:white;" asp-action="Index" asp-controller="City" asp-route-pg="@(Model.CurrentPage +1)">
                    <span class="sr-only">Next</span>
                    <svg class="w-2.5 h-2.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4" />
                    </svg>
                </a>
            </li>
        }
    </ul>
</nav>