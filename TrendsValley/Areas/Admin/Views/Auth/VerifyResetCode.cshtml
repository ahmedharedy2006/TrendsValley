@model VerifyCodeViewModel
<br />
<center>
<div class="row col-md-10">
    <div class="row">
        <div class="col-md-12">
                <img src="/pics/Email Icon.png" style="width:225px;" />
                <h2>Enter your Code.</h2>
            <form asp-controller="Auth" asp-action="VerifyResetCode" method="post" role="form">
                    <p>We Sent a Verfication Code To Your Email , Please Check Your Inbox and Enter The Code Below.</p>

                <input asp-for="Email" hidden />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Code" class="col-md-2"></label>
                    <div class="col-md-10">
                            <input asp-for="Code" class="form-control w-50 text-center" placeholder="Enter Code" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>

                @if (TempData["Message"] != null)
                {
                    <p style="color: green;">@TempData["Message"]</p>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <p style="color: red;">@TempData["ErrorMessage"]</p>
                }

                <br />
                <div class="form-group">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success form-control">Verify</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
</center>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}